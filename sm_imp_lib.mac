macro getError( msg )
    var f_sbbank = Tbfile( "sbbank.msg", "r", 0, null, "sbbank.def" );

    f_sbbank.rewind();  f_sbbank.clear();
    f_sbbank.rec.Number = msg;
    if( f_sbbank.getEQ() )
        return "Error code:" + string(msg) + " - " + f_sbbank.rec.Contents;
    else
        return "Error code:" + string(msg);
    end;
end;

